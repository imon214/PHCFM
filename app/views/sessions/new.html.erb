<div id="login-box">
  <fieldset style="border-color:#EAEAEA" class="login">
    <legend>Login</legend>

    <%= form_tag sessions_path do %>
      <p>
        <%= label_tag :username %>
        <%= text_field_tag :username, params[:username], :size => 30, :placeholder => 'valid username' %>
      </p>
      <p>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </p >
      <p>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
        <%= label_tag :remember_me %>
      </p>
      <p><%= submit_tag "Login" %></p>
    <% end %>

      <br />
      Don't have an account yet? <%= link_to "Click Here!", signup_path %>
  </fieldset>  
</div>